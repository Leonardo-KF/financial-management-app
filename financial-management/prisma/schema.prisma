// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String
  password  String
  bills     Bills[]
  createdAt DateTime
  updatedAt DateTime
}

model Bills {
  id          Int      @id @default(autoincrement())
  title       String
  value       Float
  description String
  expiration  DateTime
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime
  updatedAt   DateTime
}
